{
    "name": "pug-hot-reload",
    "version": "1.0.0",
    "main": "app.js",
    "scripts": {
        "start": "concurrently \"nodemon --watch views --watch js/index.js --exec node js/index.js\" \"npm run serve\" \"npm run app\"",
        "serve": "browser-sync start --proxy http://localhost:3001 --files 'public/**/*'",
        "app": "node js/app.js"
    },
    "dependencies": {
        "express": "^4.19.2",
        "pug": "^3.0.3"
    },
    "devDependencies": {
        "browser-sync": "^2.27.7",
        "chokidar": "^3.6.0",
        "nodemon": "^3.1.4",
        "sass": "^1.77.6",
        "stylelint": "^16.6.1",
        "stylelint-config-standard": "^36.0.1",
        "stylelint-config-standard-scss": "^13.1.0"
    }
}